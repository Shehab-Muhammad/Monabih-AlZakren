<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval" >
            <gradient
                android:endColor="@android:color/transparent"
                android:gradientRadius="360"
                android:startColor="@color/primary_dark_material_light"
                android:type="radial" />

            <stroke
                android:width="2dp"
                android:color="@color/primary_dark_material_light" />

        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval" >
            <solid android:color="@color/app_color" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

</layer-list>